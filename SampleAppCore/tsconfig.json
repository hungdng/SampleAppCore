{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true
  },
  "include": ["index.ts"],
  "exclude": [ "wwwroot/lib", "node_module" ], //ignore lib folders, we will get IntelliSense via ATA
  "typeAcquisition": {
    "enable": true,
    "include": [ "wwwroot/app" ]
  }
}

